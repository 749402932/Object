<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bluelight"
    tools:context=".BiJiMainActivity" >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@color/transparent">
	    <ImageButton
	        android:id="@+id/mode_btn"
	        android:contentDescription="模式"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/grid"
	        android:padding="8dp"
	        android:background="@color/transparent" />
	    <TextView
	        android:id="@+id/title_main" 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="@string/app_name"
	        android:textSize="20sp"
	        android:padding="8dp"
	        android:textColor="@color/white"/>
	    <ImageButton
	        android:id="@+id/sort_btn"
	        android:contentDescription="排序"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/asc"
	        android:padding="8dp"
	        android:background="@color/transparent" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/it_adv"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginTop="0.5dp"
		android:layout_marginBottom="0.5dp"
		android:background="@color/lightBlue"></View>
	<TextView 
	    android:id="@+id/refresh_txt"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="刷新"
	    android:textSize="16sp"
	    android:textColor="@color/white"
	    android:gravity="center"
	    android:visibility="gone" />
	<FrameLayout
	    android:id="@+id/notes_frm"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:background="@drawable/kemu">
		<ListView
		    android:id="@+id/notes_lis"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:scrollbars="none"
		    android:listSelector="@null"
		    android:visibility="gone"
		    android:background="@color/gray" />
		<GridView
		    android:id="@+id/notes_grd"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:scrollbars="none"
		    android:stretchMode="columnWidth"
		    android:verticalSpacing="2dp"
		    android:horizontalSpacing="2dp"
		    android:listSelector="@null"
		    android:visibility="gone"
		    android:gravity="center"
		    android:background="@drawable/kemu" />
		<EditText
		    android:id="@+id/search_txt"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="bottom|right"
		    android:layout_marginBottom="14dp"
		    android:paddingTop="5dp"
		    android:paddingBottom="5dp"
		    android:paddingLeft="8dp"
		    android:textColor="@color/white"
		    android:textColorHint="@color/white"
		    android:inputType="text"
		    android:visibility="invisible"
		    android:hint="搜索记事"/>
	</FrameLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@color/transparent">
	    <ImageButton
	        android:id="@+id/menu_btn"
	        android:contentDescription="返回"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/lock"
	        android:padding="8dp"
	        android:background="@color/transparent" />
	    <ImageButton
	        android:id="@+id/add_btn"
	        android:contentDescription="添加"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:src="@drawable/add"
	        android:padding="8dp"
	        android:background="@color/transparent" />
	    <ImageButton
	        android:id="@+id/search_btn"
	        android:contentDescription="搜索记事"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/search"
	        android:padding="8dp"
	        android:background="@color/transparent" />
	</LinearLayout>
</LinearLayout>
